<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_cons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/maincolor1">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_bottom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/main_image1"
            android:layout_width="213dp"
            android:layout_height="195dp"
            android:layout_marginTop="85dp"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"
            app:layout_constraintTop_toBottomOf="@id/main_linear1"
            app:srcCompat="@drawable/image7" />

        <LinearLayout
            android:id="@+id/main_linear1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gd_top1"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"
            android:weightSum="10">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_menu"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:adjustViewBounds="true"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_image6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_house"
                android:adjustViewBounds="true"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_location"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_message"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/main_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기흥구 보정동"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"
            app:layout_constraintTop_toBottomOf="@id/main_linear1"
            android:layout_marginTop="10dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/main_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021-07-29 12:10AM"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"
            app:layout_constraintTop_toBottomOf="@id/main_txt3"
            android:layout_marginTop="10dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/main_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최악"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/main_image1"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/main_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="절대나가지마세요!!!"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/main_txt1"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"/>

        <View
            android:id="@+id/main_view"
            android:layout_width="0dp"
            android:layout_height="2px"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"
            app:layout_constraintTop_toBottomOf="@id/main_txt2"
            app:layout_constraintBottom_toTopOf="@id/main_linear3"
            android:background="@color/white"
            />

        <View
            android:id="@+id/main_view2"
            android:layout_width="0dp"
            android:layout_height="2px"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"
            app:layout_constraintBottom_toTopOf="@id/main_linear2"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            />

        <LinearLayout
            android:id="@+id/main_linear3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/main_view"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"
            android:weightSum="10"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_txt6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="   미세먼지"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="4"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_txt7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="보통"
                android:gravity="right"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="2"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/image11"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_txt8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.023ppm"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_weight="3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_linear4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/main_linear3"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"
            android:weightSum="10"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_txt9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="   초미세먼지 "
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="4"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_txt10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="보통"
                android:gravity="right"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="2"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_image3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/iamge13"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_txt11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.023ppm"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_weight="3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_linear5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/main_linear4"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"
            android:weightSum="10"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_txt12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="   오존"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="4"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_txt13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="좋음"
                android:gravity="right"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="2"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_image4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/iamge13"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_txt14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.023ppm"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_weight="3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_linear6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/main_linear5"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"
            android:weightSum="10"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_txt15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="   일산화탄소"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="4"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_txt16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="보통"
                android:gravity="right"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="2"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/main_image5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/image11"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_txt17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.023ppm"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_weight="3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_linear2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/main_linear6"
            app:layout_constraintLeft_toRightOf="@id/gd_left1"
            app:layout_constraintRight_toLeftOf="@id/gd_right1"
            app:layout_constraintBottom_toTopOf="@id/gd_bottom1"
            android:layout_marginTop="600dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/subcolor5">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/main_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:clipChildren="false"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
